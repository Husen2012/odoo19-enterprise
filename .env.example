# Odoo 19 Enterprise Configuration
# Copy this file to .env and customize the values

# GitHub Configuration
GITHUB_USER=yourusername
GITHUB_TOKEN=ghp_your_personal_access_token_here

# Server Configuration
SERVER_IP=your.server.ip.address
MAIN_PORT=10024
LONGPOLLING_PORT=20024

# Database Configuration
DB_USER=odoo
DB_PASSWORD=odoo19enterprise@2025
DB_NAME=postgres

# Odoo Configuration
ADMIN_PASSWORD=Enterprise@2025
WORKERS=4
MEMORY_LIMIT=2684354560

# Installation Paths
INSTALL_DIR=/opt/odoo19-enterprise
BACKUP_DIR=/opt/odoo19-enterprise/backups

# Docker Configuration
COMPOSE_PROJECT_NAME=odoo19-enterprise
DOCKER_NETWORK_SUBNET=172.35.0.0/16

# SSL Configuration (optional)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/odoo.crt
SSL_KEY_PATH=/etc/ssl/private/odoo.key

# Email Configuration (optional)
EMAIL_FROM=noreply@yourdomain.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SSL=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_PORT=9090

# Development Configuration
DEV_MODE=false
DEBUG_MODE=false
TEST_MODE=false
